@import "reset.css"

body
textarea
  font: normal 14px/140% Helvetica, Arial, sans-serif

body
  background-color: rgb(0, 121, 191)
  color: #fff
  height: 100vh
  width: 100vw
  header
    width: 100%
    background-color: #026AA7
    overflow: hidden
    position: relative
    #dashboard
      width: 100%
      display: flex
      justify-content: space-between
      padding: 5px
      .search-bar
        position: relative
        input
          background-color: rgba(255,255,255,.3)
          border-radius: 3px
          border: none
          color: rgba(255,255,255,.5)
          font-size: 13px
          height: 30px
          margin: 0
          min-height: 30px
          padding-right: 30px
          padding-left: 8px
          line-height: 19px
          width: 180px
          &:hover
            background-color: rgba(255,255,255,.4)
        .search-icon
          right: 0
          top: 0
          cursor: pointer
          position: absolute
          z-index: 2
          &:before
            background: url('/images/sprite.png') 180px -60px
            content: ""
            width: 100%
            height: 100%
            z-index: 3
            display: block
            position: relative
      .logo
        height: 30px
        width: 80px
        background: url('/images/header-logo.png')
        position: absolute
        left: 50%
        transform: translateX(-50%)
      .info
        display: flex
        .user
          margin-right: 8px
        .box
          background: linear-gradient(to bottom,rgba(255,255,255,.3) 0,rgba(255,255,255,.2) 100%)
          color: #f3f3f3
          display: block
          margin-right: 8px
          &:hover
            background: linear-gradient(to bottom,rgba(255,255,255,.4) 0,rgba(255,255,255,.3) 100%)
          *
            background: url('/images/sprite.png') 0 0
            display: block
            width: 100%
            height: 100%
          .user-icon
            background-position: -30px 0
          .notification-icon
            background-position: -420px -60px

input[type=text]
  box-sizing: border-box
  -webkit-appearance: none
  background-color: #E2E4E6
  border: 1px solid #CDD2D4
  border-radius: 3px
  display: block
  margin-bottom: 9pt
  min-height: 2pc
  padding: 7px
  font-size: 14px
  &:focus
    outline: 0
  
input[type=submit]
  border: none
  box-shadow: 0 1px 0 #959DA1
  cursor: pointer
  display: inline-block
  font-weight: 700
  line-height: 22px
  padding: 4px 20px
  text-align: center
  border-radius: 3px
  font-size: 14px
  &.primary
    background: linear-gradient(to bottom,#61BD4F 0,#5AAC44 100%)
    box-shadow: 0 1px 0 #3F6F21
    color: #fff
    &:hover
      background: linear-gradient(to bottom,#5AAC44 0,#519839 100%)

main
  height: 100%
  width: 100%
  position: relative
  #board-wrapper
    height: 100%
    display: flex
    flex-direction: column
    .board-header
      padding: 8px 8px 0
      margin-bottom: 10px
      .board-title-container
        cursor: default
        font-size: 18px
        font-weight: 700
        line-height: 30px
        margin: 0 10px 0 4px
        height: 30px
        border-radius: 3px
        display: inline-block
        color: #fff
        &:hover
          background: rgba(0,0,0,.12)
          cursor: pointer
        .board-title
          padding: 0 8px
      .private
        font-size: 12px
        &:before
          content: ''
          display: inline-block
          background: url("/images/sprite.png") -309px -127px
          height: 12px
          width: 12px
          padding-right: 5px
    #board
      position: relative
      overflow: hidden
      height: 100%
      .board-canvas
        flex-grow: 1
        display: flex
        overflow-y: hidden
        overflow-x: auto
        white-space: nowrap
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0
        #lists
          display: flex
          height: 100%
          .list
            margin: 0 5px
            width: 270px
            background: #E2E4E6
            border-radius: 3px
            box-sizing: border-box
            display: flex
            -webkit-flex-direction: column
            -ms-flex-direction: column
            flex-direction: column
            max-height: 100%
            position: relative
            white-space: normal
            &:first-child
              margin-left: 10px
             .open-card-composer
              padding: 10px 15px
              color: rgb(77, 77, 77)
              &:hover
                background-color: #CDD2D4
                color: #4d4d4d
                text-decoration: underline
            .list-header
              display: flex
              flex: 0 0 auto
              padding: 8px 10px
              position: relative
              min-height: 18px
              textarea
                box-sizing: border-box
                background: 0 0
                border: none
                border-radius: 3px
                box-shadow: none
                font-weight: 700
                font-size: 14px
                height: 18px
                min-height: 18px
                padding: 3px 5px
                resize: none
                max-height: 16pc
                flex-grow: 1
                &:focus
                  background-color: rgba(255,255,255,.85)
                  outline: 0
              .list-hamburger
              .js-list-subscribed
                display: block
                padding: 4px
                height: 18px
                width: 18px
                text-align: center
                &:hover
                  border-radius: 3px
                  background: #CDD2D4
                .list-icon
                  font-size: 14px
                  color: #444
                  width: 100%
                  height: 100%
                  display: block
                  position: relative
                  bottom: 4px
        .add-list
          height: 77px
          padding: 4px
          border-radius: 3px
          background-color: #E2E4E6
          transition: background 85ms ease-in,
                      opacity 40ms ease-in,
                      border-color 85ms ease-in
          min-width: 270px
          margin: 0 5px
          vertical-align: top
          white-space: nowrap
          &.idle
            background: rgba(0,0,0,.12)
            cursor: pointer
            color: #fff
            height: 32px
            &:hover
              background: rgba(0,0,0,.3)
            .placeholder
              display: block
            .list-name-input
              background: 0 0
              border-color: transparent
              box-shadow: none
              cursor: pointer
              display: none
              margin: 0
            .list-add-controls
              height: 0
              margin: 0
              overflow: hidden
          .placeholder
            display: none
            padding: 7px
            color: rgba(255,255,255,.7)
            -webkit-transition: color 85ms ease-in
            transition: color 85ms ease-in
          .list-name-input
            background: rgba(0,0,0,.05)
            border-color: #aaa
            box-shadow: inset 0 1px 8px rgba(0,0,0,.15)
            display: block
            margin: 0
            -webkit-transition: margin 85ms ease-in,background 85ms ease-in
            transition: margin 85ms ease-in,background 85ms ease-in
            width: 100%
          

.list-extras
  display: flex
  right: 4px
  top: 4px

.icon-sm
  height: 18px
  line-height: 18px
  width: 18px
  display: inline-block
  
.icon-check
  background: url('/images/sprite.png') -178px -90px
  margin-left: 3px

.icon-subscribe
  background: url('/images/sprite.png') -305px -90px
  height: 100%
  width: 100%
  display: block

.list-add-controls
.card-add-controls
  transition: margin 85ms ease-in,height 85ms ease-in

.cancel-edit
  display: inline-block
  margin-left: 5px
  background: url('/images/sprite.png') 60px -30px
  position: relative
  top: 10px
  &.white-hover
    &:hover
      background-position: 60px -60px  
  &:hover
    background-position: 60px 0

.extra-space
  display: inline-block
  min-width: 5px
  height: 1px

.hide
  display: none
  
.card-composer
  flex: 1 1 auto
  overflow-y: auto
  margin: 0 4px
  padding: 0 4px 8px

.list-card
  background-color: #fff
  border-radius: 3px
  max-width: 300px
  min-height: 20px
  position: relative
  z-index: 0
  padding: 6px 6px 2px 8px
  textarea
    background: 0 0
    height: 100%
    width: 100%
    border: none
    box-shadow: none
    height: auto
    margin-bottom: 4px
    max-height: 162px
    min-height: 54px
    overflow-y: auto
    padding: 0
    &.focus
      background-color: #E2E4E6
      border: 1px solid #CDD2D4
      &:focus
      &:active
        background: #fff
        border-color: #298FCA
        box-shadow: 0 0 2px #298FCA
    &:focus
    &:active
      outline: 0

#cards
  flex: 1 1 auto
  overflow-y: auto
  margin: 0 4px
  padding: 0 4px
  z-index: 1
  min-height: 0
  .card
    background-color: #fff
    border-bottom: 1px solid #ccc
    border-radius: 3px
    cursor: pointer
    margin-bottom: 6px
    max-width: 300px
    min-height: 20px
    position: relative
    z-index: 0
    &:hover
      background-color: #EDEFF0
      border-bottom-color: #D6DADC
      .card-edit-icon
        visibility: visible
        &:hover
          background-color: #D6DADC
          background-position: -552px -87px
    .card-edit-icon
      background: url('/images/sprite.png') -552px -105px
      background-color: #EDEFF0
      background-clip: padding-box
      background-origin: padding-box
      border-radius: 3px
      opacity: .8
      padding: 4px
      position: absolute
      right: 3px
      top: 3px
      height: 18px
      width: 18px
      visibility: hidden
      z-index: 40
    .card-details
      overflow: hidden
      padding: 6px 6px 2px 8px
      position: relative
      z-index: 10
      .card-title
        clear: both
        font-weight: 400
        margin: 0 0 4px
        overflow: hidden
        word-wrap: break-word
        color: #4d4d4d
        display: block
    
.icon-lg
  height: 30px
  font-size: 20px
  line-height: 30px
  width: 30px

.quick-card-editor
  background: rgba(0,0,0,.6)
  bottom: 0
  color: #fff
  left: 0
  position: fixed
  right: 0
  top: 0
  z-index: 10
  .close-icon
    color: rgba(255,255,255,.6)
    padding: 9px
    position: absolute
    right: 0
    top: 0
    -webkit-transition-property: -webkit-transform,color
    transition-property: transform,color
    -webkit-transition-duration: 150ms
    transition-duration: 150ms
  .quick-card-edit-box
    position: absolute
    width: 254px
  
.pop-over
  background: #fff
  border-radius: 3px
  border: 1px solid #D6DADC
  border-bottom-color: #C4C9CC
  box-shadow: 0 1px 6px rgba(0,0,0,.15)
  display: none
  position: absolute
  width: 300px
  z-index: 70
  -webkit-transform: translate3d(0,0,0)
  &.is-shown
    display: block
  .pop-over-header
    height: 36px
    position: relative
    margin-bottom: 8px
    text-align: center
    .pop-header-title
      box-sizing: border-box
      color: #8c8c8c
      display: block
      line-height: 36px
      border-bottom: 1px solid #D6DADC
      margin: 0 10px
      overflow: hidden
      padding: 0 2pc
      position: relative
      text-overflow: ellipsis
      white-space: nowrap
      z-index: 1
    .pop-close-btn
      padding: 10px 10px 10px 4px
      position: absolute
      top: 8px
      right: 18px
      z-index: 2
      line-height: 18px
      background: url('/images/sprite.png') -415px -107px
      &:hover
        background-position: -415px -89px
  .pop-over-content
    overflow-x: hidden
    overflow-y: auto
    padding: 0 10px 10px
    .form-grid
      display: flex
      flex-wrap: wrap
      width: 100%
      .button-link.setting
        height: 52px
        float: left
        position: relative
        margin-top: 0
      .form-grid-child-full
        flex: 1 1 100%
        margin: 0 0 8px
      .button-link
        background: linear-gradient(to bottom,#fff 0,#F8F9F9 100%)
        box-sizing: border-box
        border: 1px solid #E2E4E6
        border-bottom-color: #CDD2D4
        cursor: pointer
        display: block
        font-weight: 700
        height: 34px
        margin-top: 6px
        max-width: 300px
        overflow: hidden
        padding: 7px
        position: relative
        text-overflow: ellipsis
        user-select: none
        white-space: nowrap
        border-radius: 3px
        .label
          color: #8c8c8c
          display: block
          font-size: 9pt
          line-height: 14px
          margin-bottom: 0
        .value
          display: block
          font-size: 18px
          line-height: 24px
          overflow: hidden
          text-overflow: ellipsis
          color: #000
        label
          display: none
        select
          border: none
          cursor: pointer
          height: 50px
          left: 0
          margin: 0
          opacity: 0
          position: absolute
          top: 0
          z-index: 2
          width: 100%Ã¥
          max-height: 300px
    .pop-over-list
      li
        > a
          cursor: pointer
          display: flex
          font-weight: 700
          padding: 6px 10px
          position: relative
          margin: 0 -10px
          text-decoration: none
          color: #444
          &:hover
            background-color: #298FCA
            color: #fff
            
#window-overlay
  align-items: flex-start
  background-color: rgba(0,0,0,.6)
  display: none
  height: 100%
  justify-content: center
  left: 0
  overflow-y: auto
  position: fixed
  top: 0
  width: 100%
  z-index: 20
  &.is-up
    display: flex
  .window
    background-color: #EDEFF0
    border-radius: 3px
    margin: 3pc 0 5pc
    position: relative
    width: 730px
    z-index: 25
    overflow: hidden
    .window-wrapper
      .dialog-close-button
        color: rgba(0,0,0,.3)
        position: absolute
        top: 0
        right: 0
        height: 30px
        overflow: hidden
        padding: 4px
        width: 30px
        z-index: 2
        -webkit-transition: background-color 350ms,color 150ms
        transition: background-color 350ms,color 150ms
      .card-detail-window
        min-height: 600px
        .window-header
          margin: 4px 40px 4px 38px
          padding: 9pt 9pt 0
          position: relative
          z-index: 1
          .window-header-icon
            left: -28px
            position: absolute
            top: 8px
          .window-title
            .mod-card-back-title
              background: 0 0
              border: 0
              border-radius: 3px
              box-shadow: none
              font-size: 18px
              font-weight: 700
              height: 22px
              line-height: 22px
              margin: -4px -6px
              min-height: 22px
              padding: 4px 6px
              resize: none
          .window-header-inline-content
            cursor: default
            display: inline-block
            margin: 4px 6px 0 0
            .u-bottom
              margin-bottom: 0
              padding-bottom: 0
            .u-inline-block
              display: inline-block
            a
              display: inline
        .window-main-col
          float: left
          margin: 0
          min-height: 20px
          padding: 8px 9pt 9pt
          position: relative
          width: 546px
          z-index: 0
          .u-gutter
            margin-right: 38px

